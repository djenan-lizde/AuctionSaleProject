@model List<AuctionSale.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
    var roleId = ViewBag.roleId;
}

<h1>EditUsersInRole</h1>

@using (Html.BeginForm("EditUsersInRole", "Administration"))
{
    <div class="card">

        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" asp-action="EditUsersInRole" asp-route-roleId="@roleId">Update</button>
            <a href="/Administration/EditRole/@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
}